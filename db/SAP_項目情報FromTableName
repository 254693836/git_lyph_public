SELECT 
    DD03L.TABNAME||DD03L.FIELDNAME AS ID,
    DD03L.TABNAME,
    DD03L.POSITION,
    DD03L.FIELDNAME,
    DD03L.DATATYPE ,
    DD03L.LENG ,
    DD03L.DECIMALS ,
    DD03L.ROLLNAME,
    DD04T.DDLANGUAGE ,
    DD03T.DDTEXT    AS DD03T_TEXT,
    DD04T.REPTEXT   AS DD04T_TEXT,
    DD04T.SCRTEXT_S AS DD04T_S,
    DD04T.SCRTEXT_M AS DD04T_M,
    DD04T.SCRTEXT_L AS DD04T_L

FROM DD03L
LEFT JOIN DD03T ON 
          DD03L.TABNAME    = DD03T.TABNAME 
    AND   DD03L.FIELDNAME  = DD03T.FIELDNAME 
    AND   DD03T.DDLANGUAGE = 'J'
    
LEFT JOIN DD04T ON DD03L.ROLLNAME = DD04T.ROLLNAME 
    AND   DD04T.AS4LOCAL   = 'A'
    AND   DD04T.DDLANGUAGE = 'J'
    
WHERE     DD03L.TABNAME = 'EKKO'
    AND   DD03L.DATATYPE <> ''
ORDER BY DD03L.POSITION;
